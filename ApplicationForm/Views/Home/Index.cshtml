@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="imgdiv"> <img src="/image/company-logo-2.png"></div>
    <div class="title">Application Form</div>
    <p>Thank you for the interest shown in MPY TECHNOLOGIES.Please take a few minutes of
      your time to fill in the following details to help us understand your technical skills and
      personal competencies better.</p>
    <p>Please keep in mind the following when filling up the form:</p>
    <ol type="1">
      <li>Fill in the boxes in application blank in bold capital<br>
        Letter unless the content is of a descriptive nature.</li>
      <li>Fill in the details according to the format mentioned<br>
        For the date and day.</li>
    </ol>
    <div class="content">
      <form id="perdet">
        <div class="user-details">
          <div class="input-box">
            <span class="details">Full Name</span>
            <input type="text" placeholder="Enter your name" required>
          </div>
          <div class="input-box">
            <span class="details">Father's Name</span>
            <input type="text" placeholder="Enter your father's name" required>
          </div>
          <div class="input-box">
            <span class="details">Email</span>
            <input type="email" placeholder="Enter your email" required>
          </div>
          <div class="input-box">
            <span class="details">Phone Number</span>
            <input type="number" placeholder="Enter your number" required>
          </div>
          <div class="input-box">
            <span class="details">Nationality</span>
            <input type="text" placeholder="Enter your nationality" required>
          </div>
          <div class="input-box">
            <span class="details">Security Number(if applicable)</span>
            <input type="number" placeholder="Enter your number">
          </div>
          <div class="input-box">
            <span class="details">Pan card number</span>
            <input type="number" placeholder="Enter your pan card number">
          </div>
          <div class="input-box">
            <label>Birth Date</label>
            <input type="date" placeholder="Enter birth date" required />
          </div>
          <div class="input-box">
            <span class="details">Place of Birth</span>
            <input type="text" placeholder="Enter your place of birth" required>
          </div>
          <div class="input-box">
            <span class="details">Marital Status</span>
            <input type="text" placeholder="Enter your marital status" required>
          </div>
        </div>
        <div class="gender-details">
          <input type="radio" name="gender" id="dot-1">
          <input type="radio" name="gender" id="dot-2">
          <input type="radio" name="gender" id="dot-3">
          <span class="gender-title">Gender</span>
          <div class="category">
            <label for="dot-1">
              <span class="dot one"></span>
              <span class="gender">Male</span>
            </label>
            <label for="dot-2">
              <span class="dot two"></span>
              <span class="gender">Female</span>
            </label>
            <label for="dot-3">
              <span class="dot three"></span>
              <span class="gender">Prefer not to say</span>
            </label>
          </div>
        </div>
       
        <div class="button">
          <input type="submit" value="Save and Continue">
        </div>
        
      </form>
    </div>
  </div>
  <script>
document.getElementById("perdet").addEventListener("submit", function(event) {
    event.preventDefault(); 
    window.location.href = "http://localhost:5149/Home/AddressDetails"; 
});
</script> 